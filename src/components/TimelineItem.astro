---
export interface Props {
  title: string
  description: string
  link?: string
  date: string
}

const { title, description, link, date } = Astro.props
---

<div class="flex gap-8 pb-12">
  <section>
    <div
      class="absolute w-3 h-3 bg-primary rounded-full mt-1.5 -start-1.5 border border-primary dark:border-gray-900 dark:bg-gray-700"
    >
    </div>
    <h3 class="text-xl font-bold text-secondary font-Onest mb-2">
      {title}
    </h3>
    <time
      class="mb-1 text-md font-normal leading-none text-gray-500 dark:text-gray-500 font-Onest"
      >{date}</time
    >
  </section>

  <section class="flex flex-col gap-y-4">
    <div>
      <p
        class="mb-4 text-base font-normal dark:text-gray-100 text-gray-800 text-pretty"
      >
        {description}
      </p>
    </div>
    <div>
      {
        link && (
          <a
            href={link}
            class="bg-white/5 border dark:border-white/10 border-gray-300 rounded-full inline-flex justify-center items-center gap-x-2 py-1.5 px-2.5 md:py-2 md:px-4 text-xs md:text-base transition hover:scale-110 hover:bg-white/10 text-black/70 dark:text-white/80"
          >
            Saber m√°s...{" "}
            <svg
              class="w-3 h-3 ms-2 rtl:rotate-180"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 14 10"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M1 5h12m0 0L9 1m4 4L9 9"
              />
            </svg>
          </a>
        )
      }
    </div>
  </section>
</div>
